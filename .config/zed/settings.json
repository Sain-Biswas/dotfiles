//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // ai assistant
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": ""
    }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },

  // font settings
  "ui_font_size": 16,
  "ui_font_family": "Rec Mono Duotone",
  "buffer_font_size": 16,
  "buffer_font_family": "Rec Mono Duotone",

  // theme
  "icon_theme": {
    "mode": "dark",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "theme": {
    "mode": "dark",
    "light": "Vercel Light",
    "dark": "Vercel Dark"
  },

  // code actions
  "autosave": "on_focus_change",
  "format_on_save": "on",

  // terminal
  "terminal": {
    "font_family": "Rec Mono Duotone",
    "font_size": 16,
    "cursor_shape": "bar"
  },

  // Looks
  "project_panel": {
    "dock": "right",
    "auto_fold_dirs": false,
    "scrollbar": {
      "show": "auto"
    }
  },
  "git_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "button": false,
    "dock": "right"
  },

  // extentions installed
  "auto_install_extensions": {
    "html": true,
    "toml": true,
    "git-firefly": true,
    "dockerfile": true,
    "sql": true,
    "vue": true,
    "catppuccin-icons": true,
    "svelte": true,
    "scss": true,
    "lua": true,
    "astro": true,
    "emmet": true,
    "docker-compose": true,
    "prisma": true,
    "python-requirements": true,
    "vercel-theme": true,
    "tmux": true,
    "hyprlang": true,
    "mdx": true
  }
}
