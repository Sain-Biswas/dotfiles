  "group/utilities": {
    "orientation": "inherit",
    "modules": [
      "custom/utility-expand",
      "custom/screenshot",
      "custom/apps",
      "custom/color",
    ],
    "drawer": {
      "transition-duration": 600,
      "children-class": "child-utility",
      "transition-left-to-right": false,
      "click-to-reveal": true,
    },
  },
  "custom/utility-expand": {
    "format": "Û±å¢",
    "tooltip": true,
