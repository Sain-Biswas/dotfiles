    "on-click-middle": "playerctl previous",
    "on-click-right": "playerctl next",
    "artist-len": 10,
    "title-len": 30,
    "album-len": 10,
  },
  "image/album-art": {
    "exec": "~/dotfiles/.config/waybar/scripts/album-art.sh",
